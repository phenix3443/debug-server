{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "config",
        "type": "shell",
        "command": "cmake",
        "args": [
          "-S",
          "./",
          "-B",
          "./build",
          "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
        ]
      },
      {
        "label": "build",
        "type": "shell",
        "dependsOn": ["config"],
        "command": "cmake",
        "args": ["--build", "./build", "--config", "Debug"]
      },
      {
        "label": "start",
        "type": "shell",
        "dependsOn": ["build"],
        "command": "${workspaceFolder}/build/rpc_server",
        "problemMatcher": []
      },
      {
        "label": "start network",
        "type": "shell",
        "dependsOn": ["build"],
        "command": "${workspaceFolder}/build/rpc_server",
        "args": ["--network"]
      }
    ]
}